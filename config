# start rofi (another program launcher but kinda better i guess
bindsym $mod+space exec rofi -show drun -theme Monokai -font "Perfect DOS VGA 437 12"
#
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop
# To start Firefox just type $mod+o+f 
set $mode_launcher Launch: [f]irefox 
bindsym $mode+o mode "$mode_launcher"

mode "$mode_launcher" {
  bindsym f exec firefox
  #bindsym t exec thunderbird

  bindsym jk mode "default"   
  bindsym Return mode "default"   
}

